<Window x:Class="OS_Game_Launcher.Windows.loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OS_Game_Launcher.Windows"
        mc:Ignorable="d"
        Title="OS Game-Launcher Loading..." Height="289" Width="543"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen" Icon="/OS Game-Launcher;component/Resources/icon_app.ico" ShowInTaskbar="False">
    <WindowChrome.WindowChrome>
        <WindowChrome 
        CaptionHeight="0"
        ResizeBorderThickness="5" UseAeroCaptionButtons="False"
        CornerRadius="0"
        GlassFrameThickness="-1"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Frame Grid.Row="0" Grid.Column="0" x:Name="_overlayFrame" NavigationUIVisibility="Hidden" Background="#3b3b3b" />
    </Grid>
</Window>
